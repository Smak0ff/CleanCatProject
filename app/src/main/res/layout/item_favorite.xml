<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/double_vertical_margin"
    android:layout_marginBottom="@dimen/double_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageForRecyclerFavoriteId"
        android:layout_width="165dp"
        android:layout_height="165dp" />

    <Button
        android:id="@+id/deleteFromFavoriteBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_from_favorite_text" />
</LinearLayout>